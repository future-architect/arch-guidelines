{
  "filters": {
    "allowlist": {
        "allow": [
          "/:::.*/",
          "/.*:/",
          "/【.*】/",
          "/✅️.*/",
          "/❌️.*/",
          "ジョブスケジューラ",
          "単体テスト",
          "データスチュワード",
          "@timestamp",
          "フラッシュ"
        ]
    }
  },
  "rules": {
    "preset-ja-technical-writing": {
      "no-mix-dearu-desumasu": {
        "preferInHeader": "である",
        "preferInBody": "である"
      },
      "allowQuestionMark": true,
      "sentence-length": {
        "max": 200
      },
      "no-exclamation-question-mark": false,
      "ja-no-weak-phrase": true,
      "max-kanji-continuous-len": {
        "max": 10
      }
    },
    "spellcheck-tech-word": true
  }
}